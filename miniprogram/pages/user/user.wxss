.header {
  display: flex;
  flex-direction: column;
  background: blue;
  align-items: center;
  padding: 50px;
  margin-bottom: 20px;
}
.avatar {
  width: 60px;
  height: 60px;
  border: 2px solid black;
  border-radius: 50%;
  margin-bottom: 10px
}
button {
  font-size: 13px;
}
button.collection[type='default']{
  width: 100%;
  color: black;
  margin: 0;
  text-align: left;
}
.star {
  width: 20px;
  height: 20px;
  float: left;
}
.collection {
  padding: 20px;
  border: 1px solid black;
}