.header {
  font-size: 24px;
  font-weight: bold;
  padding: 0 10px 10px 10px;
  border-bottom: 1px solid #000;
  border-top: 1px solid #000;
  background: #ccc;
  display:flex;
  justify-content: space-between;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 80;
}
.title{
  line-height: 60px;
  vertical-align: middle;
}
.filter {
  height: 60px;
  width: 60px;
}
.row {
  text-align: center;
  height: 100%;
  background: #333;
  margin-bottom: 10px;
}
.button[size='mini'] {
  padding: 0;
margin-bottom: 5px;

}
.page-section-spacing {
  margin-top: 60px;
}
.like {
  margin: auto;
  line-height: 100%;
  vertical-align: middle;
  width: 40px;
  height: 40px
}


.drawer {
  transition: .5s all linear;
  position: fixed;
  top: 0;
  right: 0;
  width: 40%;
  height: 960rpx;
  background: #fff;
  border: 1px solid #000;
  transform: translateX(100%);
  z-index: 90;
  font-size: 12px
}
view.drawer.show-drawer {
  transform: translateX(0%);
  display: block;
}
view.drawer.hide-drawer{
  display: none;
  
}